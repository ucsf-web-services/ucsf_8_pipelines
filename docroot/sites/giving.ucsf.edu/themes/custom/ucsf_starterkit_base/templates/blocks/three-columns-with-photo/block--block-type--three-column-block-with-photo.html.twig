{% extends directory ~ '/templates/blocks/block.html.twig' %}

{% block content %}
    {% embed "@organisms/01-content-blocks/17-photo-cta.twig" %}
        {% block label %}
            {% if label %}
                <div class="content-area">
                    <div class="column-wrapper">
                        <div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
                            <h3 class="text-align--center">{{ label }}</h3>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endblock %}

        {% block image %}{{ file_url(content.field_background_image['#items'].entity.uri.value) }}{% endblock %}

        {% block content %}
            {{ content }}
        {% endblock %}
    {% endembed %}
{% endblock %}